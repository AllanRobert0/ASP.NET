
@{
    ViewBag.Title = "Index";
}

<h2>Listagem Index 2</h2>

<table id="tabelaCandidatos" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Nome</th>
            <th>CPF</th>
            <th>Telefone</th>
        </tr>
    </thead>
</table>

<script>
    $(document).ready(function () {
        $('#tabelaCandidatos').DataTable({
            "ajax": {
                "url": "/Home/Candidatos",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { data: "Nome" },
                { data: "CPF" },
                { data: "Telefone" }
            ]
        });
    });
</script>

